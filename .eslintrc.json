{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "no-underscore-dangle": ["error", { "allow": ["_id"] }],
        "no-use-before-define": ["error", { "variables": false }],
        "no-param-reassign": ["error", { "props": false }],
        "no-unused-vars": ["error", { "argsIgnorePattern": "next" }]
    }
}
